{
  "name": "mealplan",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun run build && cd server && bun run --watch src/index.ts",
    "dev:watch": "concurrently \"bun run build --watch\" \"bun run dev:backend\"",
    "dev:frontend": "vite",
    "dev:backend": "cd server && bun run --watch src/index.ts",
    "build": "tsc -b && vite build",
    "start": "cd server && bun run src/index.ts",
    "lint": "eslint .",
    "test:e2e": "npx playwright test",
    "preview": "vite preview",
    "db:migrate": "cd server && bunx prisma migrate dev",
    "db:studio": "cd server && bunx prisma studio",
    "db:seed": "cd server && bun run src/utils/seed.ts"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "date-fns": "^4.1.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.13.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@playwright/test": "^1.58.2",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.24",
    "concurrently": "^9.2.1",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5"
  }
}
